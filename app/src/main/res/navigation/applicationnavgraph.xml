<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/applicationnavgraph"
    app:startDestination="@id/menuFragment">

    <fragment
        android:id="@+id/menuFragment"
        android:name="com.guinigri.prestige.mobile.pedido.fragments.MenuFragment"
        android:label="fragment_menu"
        tools:layout="@layout/fragment_menu" >
        <action
            android:id="@+id/action_menuFragment_to_orderFragment"
            app:destination="@id/orderFragment" />
    </fragment>
    <fragment
        android:id="@+id/orderFragment"
        android:name="com.guinigri.prestige.mobile.pedido.fragments.OrderFragment"
        android:label="fragment_order"
        tools:layout="@layout/fragment_order" >
        <action
            android:id="@+id/action_orderFragment_to_empresaPedidoFragment"
            app:destination="@id/empresaPedidoFragment" />
    </fragment>
    <fragment
        android:id="@+id/empresaPedidoFragment"
        android:name="com.guinigri.prestige.mobile.pedido.fragments.EmpresaPedidoFragment"
        android:label="fragment_empresa_pedido"
        tools:layout="@layout/fragment_empresa_pedido" >
        <action
            android:id="@+id/action_empresaPedidoFragment_to_pagamentoFragment"
            app:destination="@id/pagamentoFragment" />
    </fragment>
    <fragment
        android:id="@+id/pagamentoFragment"
        android:name="com.guinigri.prestige.mobile.pedido.fragments.PagamentoFragment"
        android:label="fragment_pagamento"
        tools:layout="@layout/fragment_pagamento" >
        <action
            android:id="@+id/action_pagamentoFragment_to_pedidoSucessoFragment"
            app:destination="@id/pedidoSucessoFragment" />
    </fragment>
    <fragment
        android:id="@+id/pedidoSucessoFragment"
        android:name="com.guinigri.prestige.mobile.pedido.fragments.PedidoSucessoFragment"
        android:label="fragment_pedido_sucesso">
        <argument
            android:name="numeroPedido"
            app:argType="integer" />
        <action
            android:id="@+id/action_pedidoSucessoFragment_to_menuFragment"
            app:destination="@id/menuFragment" />
    </fragment>
</navigation>