<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout4"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#004584"
    tools:context=".fragments.OrderFragment" >

    <CheckBox
        android:id="@+id/check_inserir_quantidade"
        android:layout_width="247dp"
        android:layout_height="67dp"
        android:layout_marginTop="24dp"
        android:buttonTint="#FFFFFF"
        android:text="Inserir quantidade"
        android:textColor="#FBFBFB"
        android:textSize="24sp"
        app:layout_constraintEnd_toStartOf="@+id/btn_codigo_barras"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/guideline7"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="16dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="16dp" />

    <EditText
        android:id="@+id/txt_codigo_barras"
        android:layout_width="0dp"
        android:layout_height="61dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="16dp"
        android:background="#FFFFFF"
        android:ems="10"
        android:focusableInTouchMode="true"
        android:inputType="text"
        android:padding="5dp"
        app:layout_constraintEnd_toStartOf="@+id/txt_quantidade"
        app:layout_constraintStart_toStartOf="@+id/guideline7"
        app:layout_constraintTop_toBottomOf="@+id/check_inserir_quantidade" />

    <EditText
        android:id="@+id/txt_quantidade"
        android:layout_width="115dp"
        android:layout_height="60dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="16dp"
        android:background="#FFFFFF"
        android:ems="10"
        android:enabled="false"
        android:inputType="number"
        android:padding="5dp"
        app:layout_constraintEnd_toStartOf="@+id/btn_pesquisar_produto"
        app:layout_constraintTop_toBottomOf="@+id/check_inserir_quantidade" />

    <ImageButton
        android:id="@+id/btn_pesquisar_produto"
        android:layout_width="66dp"
        android:layout_height="60dp"
        android:layout_marginTop="60dp"
        android:background="#0C0C0C"
        android:clickable="true"
        android:src="@drawable/ic_baseline_arrow_right_white"
        app:layout_constraintEnd_toStartOf="@+id/guideline8"
        app:layout_constraintTop_toBottomOf="@+id/check_inserir_quantidade" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="CÃ³d. Barras"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/txt_codigo_barras"
        app:layout_constraintStart_toStartOf="@+id/guideline7" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="144dp"
        android:layout_marginBottom="8dp"
        android:text="Quant"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/txt_quantidade"
        app:layout_constraintEnd_toStartOf="@+id/guideline8" />

    <ImageButton
        android:id="@+id/btn_codigo_barras"
        android:layout_width="67dp"
        android:layout_height="62dp"
        android:layout_marginTop="16dp"
        android:background="#090909"
        android:src="@drawable/ic_baseline_qr_code_scanner_24"
        app:layout_constraintEnd_toStartOf="@+id/guideline8"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/produtosList"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="44dp"
        android:layout_marginBottom="16dp"
        android:scrollbarAlwaysDrawVerticalTrack="true"
        android:scrollbarStyle="insideInset"
        app:layout_constraintBottom_toTopOf="@+id/btn_prosseguir"
        app:layout_constraintEnd_toStartOf="@+id/guideline8"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/guideline7"
        app:layout_constraintTop_toBottomOf="@+id/txt_codigo_barras"
        app:layout_constraintVertical_bias="0.029999971"
        tools:listitem="@layout/item_pedido_card" />

    <Button
        android:id="@+id/btn_prosseguir"
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:layout_marginBottom="28dp"
        android:backgroundTint="#000000"
        android:text="Prosseguir"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/guideline8" />

    <TextView
        android:id="@+id/txt_valor_total"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="44dp"
        android:text="Subtotal: R$ 0,00"
        android:textColor="#FFFFFF"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btn_prosseguir"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/guideline7" />

    <ProgressBar
        android:id="@+id/progressBarAdicionarProduto"
        style="?android:attr/progressBarStyle"
        android:layout_width="173dp"
        android:layout_height="156dp"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/txt_valor_total"
        app:layout_constraintEnd_toStartOf="@+id/guideline8"
        app:layout_constraintStart_toStartOf="@+id/guideline7"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>